{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationDir": "./dist",
    "sourceMap": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2019",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["lib", "main.ts", "lib/modules", "lib/constants.ts", "lib/types.ts"],
  "exclude": ["node_modules"]
}
